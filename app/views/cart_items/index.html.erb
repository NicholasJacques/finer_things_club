<table>
  <th>Title</th>
  <th>Description</th>
  <th>Quantity</th>
  <th>Price</th>
  <th></th>
  <th>Subtotal</th>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td class="title"><%= cart_item.title%></td>
      <td class="description"><%= cart_item.description[0..75]%>...</td>
      <td class="quantity">
        <%= form_for(:cart_item, url: cart_item_path(cart_item), method: :put) do |f|%>
        <%= f.hidden_field :cart_item_id, value: cart_item.id %>
        <%= f.number_field :quantity, value: cart_item.quantity %><br/>
        <%= f.submit "Update Cart" %>
        <% end %>
      </td>
      <td class="price"><%= cart_item.price %></td>
      <td class="remove"><%= link_to "Remove", cart_item_path(cart_item), method: :delete %></td>
      <td class="subtotal">$<%= cart_item.subtotal %></td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td class='total-header'>Total:</td>
    <td class='cart-total'><%= @cart.total %></td>
  </tr>
</table>